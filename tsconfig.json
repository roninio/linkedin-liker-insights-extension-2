{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["chrome", "node"]
  },
  "include": [
    "./*.ts",
    "./*.tsx",
    "./components/**/*.ts",
    "./components/**/*.tsx",
    "./services/**/*.ts",
    "./vite.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
